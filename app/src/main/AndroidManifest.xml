<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.cockounter">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".StartMultiPlayerGameActivity">
        </activity>
        <activity android:name=".MultiPlayerGameActivity">
        </activity>
        <activity android:name=".EditLibraryActivity">
        </activity>
        <activity android:name=".QRCodeScannerActivity">
        </activity>
        <activity android:name=".JoinGameActivity">
        </activity>
        <activity android:name=".ResumeGameActivity">
        </activity>
        <activity android:name=".SelectPlayersActivity">
        </activity>
        <activity android:name=".SinglePlayerGameActivity">
        </activity>
        <activity android:name=".GameScreenActivity">
        </activity>
        <activity android:name=".EditPresetScriptActivity">
        </activity>
        <activity android:name=".EditRoleActivity">
        </activity>
        <activity android:name=".EditParameterActivity">
        </activity>
        <activity android:name=".EditPresetActivity">
        </activity>
        <activity android:name=".SelectPresetActivity">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service
                android:name=".network.StateUpdaterFirebaseMessagingService"
                android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>